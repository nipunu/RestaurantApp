@page
@model RestaurantApp.Pages.Restaurants.ListModel
@{
}
<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            @*<input type="search" class="form-control" value="" name="searchTerm" />*@
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-outline-secondary">
                    <i class="glyphicon glyphicon-search">Search</i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var rest in Model.Restaurants)
    { 
    <tr>
        <td>@rest.Name</td>
        <td>@rest.Location</td>
        <td>@rest.Cuisine</td>
        <td>
            <a class="btn btn-lg" asp-page="./Detail" asp-route-restaurantId=@rest.Id>
                <i class="glyphicon glyphicon-search">Details</i>
            </a>
        </td>
    </tr>
    }
</table>



<div>@Model.Message</div>
